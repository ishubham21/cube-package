{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "es6",
    "skipLibCheck": true,
    "strict": true,
    "declaration": true, // generate .d.ts files
    "sourceMap": true, // generate source map
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "./node_modules",
    "tests",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
